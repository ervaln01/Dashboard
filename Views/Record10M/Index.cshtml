@{ Layout = ""; }
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="theme-color" content="#111152" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Daily Dashboard</title>
    <link rel="shortcut icon" type="image/png" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/MainStyle.css" />
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/jquery.marquee.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="card text-center hp-card" style="overflow: hidden;">
        <div style="position: absolute; width: 100%; text-align: center; display:none" id="firework">
            <table height="100%">
                <tr style="height:33%">
                    <td width="25%">
                        <img src="~/img/fireworks0.gif" style="width: 75%;" />
                    </td>
                    <td width="25%">
                        <img src="~/img/fireworks1.gif" style="width: 75%;" />
                    </td>
                    <td width="25%">
                        <img src="~/img/fireworks0.gif" style="width: 75%;" />
                    </td>
                    <td width="25%">
                        <img src="~/img/fireworks1.gif" style="width: 75%;" />
                    </td>
                </tr>
                <tr style="height:33%">
                    <td width="25%">
                        <img src="~/img/fireworks1.gif" style="width: 75%;" />
                    </td>
                    <td width="25%">
                        <img src="~/img/fireworks0.gif" style="width: 75%;" />
                    </td>
                    <td width="25%">
                        <img src="~/img/fireworks1.gif" style="width: 75%;" />
                    </td>
                    <td width="25%">
                        <img src="~/img/fireworks0.gif" style="width: 75%;" />
                    </td>
                </tr>
                <tr style="height:33%">
                    <td width="25%">
                        <img src="~/img/fireworks0.gif" style="width: 75%;" />
                    </td>
                    <td width="25%">
                        <img src="~/img/fireworks1.gif" style="width: 75%;" />
                    </td>
                    <td width="25%">
                        <img src="~/img/fireworks0.gif" style="width: 75%;" />
                    </td>
                    <td width="25%">
                        <img src="~/img/fireworks1.gif" style="width: 75%;" />
                    </td>
                </tr>
            </table>
        </div>
        <div class="card-header" style="font-size:100px;margin-top:0px;padding-top:0em" id="header">
            <div id="before">Скоро у предприятия знаменательное событие - 10 миллионов выпущеной продукции.</div>
            <div id="after" style="display:none">На предприятии знаменательное событие - выпущено уже более 10 миллионов единиц продукции!</div>
        </div>
        <div class="card-body">
            <div class="row h-2row-quarter">
                <div class="col-lg-4 col-xl-4 p-1 h-100">
                    <div style="font-size:50px">Цель/</div>
                    <div style="font-size:50px">goal</div>
                </div>
                <div class="col-lg-1 col-xl-1 p-1 h-100">
                    <img src="img/record10m/1.png" style="width: 80%" />
                </div>
                <div class="col-lg-1 col-xl-1 p-1 h-100">
                    <img src="img/record10m/0.png" style="width: 80%; margin-right: 20px" />
                </div>
                <div class="col-lg-1 col-xl-1 p-1 h-100">
                    <img src="img/record10m/0.png" style="width: 80%; margin-left: 20px" />
                </div>
                <div class="col-lg-1 col-xl-1 p-1 h-100">
                    <img src="img/record10m/0.png" style="width: 80%" />
                </div>
                <div class="col-lg-1 col-xl-1 p-1 h-100">
                    <img src="img/record10m/0.png" style="width: 80%; margin-right: 20px" />
                </div>
                <div class="col-lg-1 col-xl-1 p-1 h-100">
                    <img src="img/record10m/0.png" style="width: 80%; margin-left: 20px" />
                </div>
                <div class="col-lg-1 col-xl-1 p-1 h-100">
                    <img src="img/record10m/0.png" style="width: 80%" />
                </div>
                <div class="col-lg-1 col-xl-1 p-1 h-100">
                    <img src="img/record10m/0.png" style="width: 80%; margin-right: 20px" />
                </div>
            </div>
            <div class="row h-2row-quarter">
                <div class="col-xs-4 col-xl-4 p-1 h-100">
                    <div style="font-size:50px">Произведено/</div>
                    <div style="font-size:50px">produced</div>
                </div>
                <div class="col-lg-1 col-xl-1 p-1 h-100">
                    <img src="img/record10m/empty.png" style="width: 80%" id="m10" />
                </div>
                <div class="col-lg-1 col-xl-1 p-1 h-100">
                    <img src="img/record10m/empty.png" style="width: 80%; margin-right: 20px" id="m1" />
                </div>
                <div class="col-lg-1 col-xl-1 p-1 h-100">
                    <img src="img/record10m/empty.png" style="width: 80%; margin-left: 20px" id="t100" />
                </div>
                <div class="col-lg-1 col-xl-1 p-1 h-100">
                    <img src="img/record10m/empty.png" style="width: 80%" id="t10" />
                </div>
                <div class="col-lg-1 col-xl-1 p-1 h-100">
                    <img src="img/record10m/empty.png" style="width: 80%; margin-right: 20px" id="t1" />
                </div>
                <div class="col-lg-1 col-xl-1 p-1 h-100">
                    <img src="img/record10m/empty.png" style="width: 80%; margin-left: 20px" id="d100" />
                </div>
                <div class="col-lg-1 col-xl-1 p-1 h-100">
                    <img src="img/record10m/empty.png" style="width: 80%" id="d10" />
                </div>
                <div class="col-lg-1 col-xl-1 p-1 h-100">
                    <img src="img/record10m/empty.png" style="width: 80%; margin-right: 20px" id="d1" />
                </div>
            </div>
        </div>
    </div>
    <script>
        $('#after').hide();
        $('#header').marquee({ speed:140, direction: 'left' });
        setInterval(() => $.ajax({
        url: "@Url.Action("GetDigits")",
        type: "GET",
        success: (response) => {
            $('#d1').attr('src', 'img/record10m/' + response.d1 + '.png');
            $('#d10').attr('src', 'img/record10m/' + response.d10 + '.png');
            $('#d100').attr('src', 'img/record10m/' + response.d100 + '.png');
            $('#t1').attr('src', 'img/record10m/' + response.t1 + '.png');
            $('#t10').attr('src', 'img/record10m/' + response.t10 + '.png');
            $('#t100').attr('src', 'img/record10m/' + response.t100 + '.png');
            $('#m1').attr('src', 'img/record10m/' + response.m1 + '.png');
            $('#m10').attr('src', 'img/record10m/' + response.m10 + '.png');
            if (response.flag) {
                $('#before').hide();
                $('#after').show();
                $('#firework').show();
            }
        }}), 3000);
    </script>
</body>
</html>